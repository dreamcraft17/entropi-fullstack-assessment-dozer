generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  bio       String?
  avatar    String?
  links     Link[]
  createdAt DateTime @default(now())
}

model Link {
  id        String   @id @default(uuid())
  title     String
  url       String
  active    Boolean  @default(true)
  order     Int      @default(0)
  clicks    Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
